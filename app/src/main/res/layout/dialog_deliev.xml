<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_normal_size"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_large_size"
            android:text="استلام من الصيدلية"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_normal_size"
                android:text="طلب رقم"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/price1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin_small_size"
                android:layout_marginRight="@dimen/margin_small_size"
                android:background="@drawable/btn_bg_blue"
                android:gravity="center"
                android:minWidth="80dp"
                android:text="12345"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_small_size"
                android:textStyle="bold" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <TextView
            android:layout_marginTop="@dimen/margin_small_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_normal_size"
            android:text="ادخل كود التسليم"/>
        <EditText
            android:textStyle="bold"
            android:paddingLeft="@dimen/margin_large_size"
            android:paddingRight="@dimen/margin_large_size"
            android:layout_marginTop="@dimen/margin_small_size"
            android:background="@drawable/shape_rectangle_rounded_border"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn"
            android:layout_marginTop="@dimen/margin_normal_size"
            android:textColor="@android:color/white"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="استلام"
            android:textSize="@dimen/txt_large_size"
            android:background="@drawable/btn_bg_blue"/>
    </LinearLayout>

</RelativeLayout>