<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl">

    <RelativeLayout
        android:background="@color/colorPrimary"
        android:id="@+id/n_header_con1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin_large_size"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:civ_border_width="0dp"
                app:civ_border_color="#FF000000"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user"/>

            <TextView
                android:layout_marginTop="@dimen/margin_normal_size"
                android:textSize="@dimen/txt_normal_size"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اسم المستخدم"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                />
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/margin_normal_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/n_header_con1"
        android:layout_marginRight="@dimen/margin_normal_size"
        android:layout_marginLeft="@dimen/margin_normal_size">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layoutDirection="rtl"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <androidx.constraintlayout.widget.Guideline
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.8"
                android:id="@+id/g1"/>

            <ImageView
                android:id="@+id/img"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_dollar"
                android:scaleType="center"
                />
            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintRight_toLeftOf="@+id/img"
                app:layout_constraintLeft_toRightOf="@+id/g1">

                <TextView
                    android:id="@+id/price1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:background="@drawable/btn_bg_blue"
                    android:gravity="center"
                    android:minWidth="50dp"
                    android:text="300"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_small_size"
                    android:textStyle="bold" />
                <TextView
                    android:layout_toRightOf="@+id/price1"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="الرصيد"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/txt_small_size"
                    android:minWidth="80dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="ج س"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/g1" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layoutDirection="rtl"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <androidx.constraintlayout.widget.Guideline
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.8"
                android:id="@+id/g2"/>

            <ImageView
                android:id="@+id/img2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_flag"
                android:scaleType="center"
                />
            <RelativeLayout
                android:id="@+id/r2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintRight_toLeftOf="@+id/img2"
                app:layout_constraintLeft_toRightOf="@+id/g2">
                <TextView
                    android:id="@+id/price2"
                    android:background="@drawable/btn_bg_blue"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="7"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_small_size"
                    android:minWidth="50dp"
                    android:layout_alignParentLeft="true"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_toRightOf="@+id/price2"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="رحلات اليوم"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/txt_small_size"
                    android:minWidth="80dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="رحلات"
                app:layout_constraintRight_toLeftOf="@+id/g2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</RelativeLayout>