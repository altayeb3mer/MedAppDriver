                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="@dimen/margin_small_size"
                                android:background="@drawable/btn_bg_rounded_green"
                                android:gravity="center"
                                android:minWidth="150dp"
                                android:paddingLeft="@dimen/margin_small_size"
                                android:paddingRight="@dimen/margin_small_size"
                                android:text="بحري"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/txt_normal_size" />

                        </LinearLayout>
                        <LinearLayout
                            app:layout_constraintLeft_toLeftOf="@+id/g4_2"
                            app:layout_constraintRight_toLeftOf="@+id/g4_1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/margin_small_size"
                            android:layout_marginRight="@dimen/margin_small_size"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="@dimen/margin_small_size"
                                android:background="@drawable/btn_bg_rounded_green"
                                android:gravity="center"
                                android:minWidth="150dp"
                                android:paddingLeft="@dimen/margin_small_size"
                                android:paddingRight="@dimen/margin_small_size"
                                android:text="بحري"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/txt_normal_size" />

                        </LinearLayout>
                        <LinearLayout
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/g4_2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/margin_small_size"
                            android:layout_marginRight="@dimen/margin_small_size"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="@dimen/margin_small_size"
                                android:background="@drawable/btn_bg_rounded_green"
                                android:gravity="center"
                                android:minWidth="150dp"
                                android:paddingLeft="@dimen/margin_small_size"
                                android:paddingRight="@dimen/margin_small_size"
                                android:text="بحري"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/txt_normal_size" />

                        </LinearLayout>

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/g4_1"
                            app:layout_constraintGuide_percent="0.33"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/g4_2"
                            app:layout_constraintGuide_percent="0.66"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <LinearLayout
                            app:layout_constraintLeft_toRightOf="@+id/g3_1"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/margin_small_size"
